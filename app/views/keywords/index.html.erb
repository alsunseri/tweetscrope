<p id="notice"><%= notice %></p>

<h2>Listing keywords</h2>
<% cache("keywords_home_table", :expires_in => 1.hour) do %>

<%= link_to 'New Keyword', new_keyword_path, :class=>"btn btn-success", :style=>"float:right" %>

<table class="table table-striped table-hover table-dark">
  <thead>
    <tr>
      <th>Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Icon/Logo</td>
      <td>Keyword</td>
      <td># of Tweets</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= image_tag(keyword.image.thumb.url) if keyword.image? %></td>
        <td><%= keyword.word %></td>
        <td><%= keyword.tweets.count %></td>
        <td><%= link_to 'Show', keyword, :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<br>
